#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show ðŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
	3) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	1) notify-send "ó°Œ˜ Internet module" "\- Click to connect
ï‘§: wifi disabled
ó±š¼: no wifi connection
ó°–©: wifi connection with quality
ï‘§: no ethernet
ó°ˆ€: ethernet working
ó±š¿: vpn is active
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Wifi
if [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ] ; then
	wifiicon="$(awk '/^\s*w/ { print "ó°–©", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
elif [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'down' ] ; then
	[ "$(cat /sys/class/net/w*/flags 2>/dev/null)" = '0x1003' ] && wifiicon="ó±š¼" || wifiicon="ó°–ª"
fi

# Ethernet
#[ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ] && ethericon="ó°ˆ€" || ethericon="ï‘§"

# TUN
[ -n "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" ] && tunicon="ó±š¿"

printf "%s%s%s\n" "$wifiicon" "$ethericon" "$tunicon"
